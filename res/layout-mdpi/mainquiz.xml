<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">

	<ScrollView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@id/top_control_bar"
		android:layout_above="@id/bottom_control_bar">

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:gravity="center_horizontal">
			
			<ProgressBar android:layout_width="fill_parent"
				android:layout_height="wrap_content" style="?android:attr/progressBarStyleHorizontal"
				android:id="@+id/main_quiz_progressbar"
				android:layout_marginTop="6dp"				
				/>

			<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<TextView android:id="@+id/main_quiz_word_text"
					android:layout_width="wrap_content" android:layout_height="wrap_content"					
					style="@style/BLText"
					android:layout_alignParentLeft="true"
					android:layout_marginLeft="15dp"
					/>
					
				<TextView android:id="@+id/main_quiz_progress_count"
					android:layout_width="wrap_content" android:layout_height="wrap_content"					
					style="@style/BLText"
					android:text="CNT"
					android:layout_alignParentRight="true"
					android:layout_marginRight="15dp"
					/>

			</RelativeLayout>			
			
			<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent" android:layout_height="wrap_content"				
				 >

				<TextView android:id="@+id/main_quiz_on_text"
					android:layout_width="150dp" android:layout_height="wrap_content"
					android:text="@string/main_quiz_on_text"
					style="@style/BLText"
					android:layout_alignParentLeft="true"
					android:gravity="center"
					android:layout_marginLeft="30dp"
					android:background="#22ff0000"																							
					/>

				<TextView android:id="@+id/main_quiz_meanings_text"
					android:layout_width="150dp" android:layout_height="wrap_content"
					android:text="@string/main_quiz_meanings_text"
					style="@style/BLText"
					android:layout_centerHorizontal="true"
					android:gravity="center"
					android:background="#2200ff00"					 					
					/>

				<TextView android:id="@+id/main_quiz_kun_text"
					android:layout_width="150dp" android:layout_height="wrap_content"
					android:text="@string/main_quiz_kun_text" 
					style="@style/BLText"
					android:layout_alignParentRight="true"
					android:gravity="center"
					android:layout_marginRight="30dp"
					android:background="#220000ff"									
					/>

			</RelativeLayout>
			

			<TextView android:id="@+id/main_quiz_kanji_text_view"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="center_horizontal" style="@style/BLText"
				android:textSize="175sp" android:text="ZZZ"
				android:layout_marginTop="-30dp"
				 />

			<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			>

				<Button android:id="@+id/main_quiz_fail_button"
					android:layout_width="105dp" android:layout_height="60dp"
					android:text="@string/main_quiz_fail_button" android:gravity="center"					
					android:layout_alignParentLeft="true"
					android:layout_gravity="center_vertical"
					android:layout_marginTop="22.5dp"
					android:layout_marginBottom="22.5dp"
					style="@style/BLButtonNoPad"
					/>

				<Button android:id="@+id/main_quiz_verity_button"
					android:layout_width="130dp" android:layout_height="105dp"
					android:text="@string/main_quiz_verity_button" android:gravity="center"					
					android:layout_centerHorizontal="true"
					style="@style/BLButtonNoPad"
					/>

				<Button android:id="@+id/main_quiz_cheat_button"
					android:layout_width="105dp" android:layout_height="60dp"
					android:text="@string/main_quiz_cheat_button" android:gravity="center"					
					android:layout_alignParentRight="true"
					android:layout_gravity="center_vertical"
					android:layout_marginTop="22.5dp"
					android:layout_marginBottom="22.5dp"
					style="@style/BLButtonNoPad"
					/>

			</RelativeLayout>

			<EditText android:id="@+id/main_quiz_edit"
				android:layout_width="fill_parent" android:layout_height="wrap_content"				
				android:background="@drawable/rounded_edittext_simple"
				android:textColor="#fff"
				android:textSize="22sp"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp"
				android:layout_marginTop="15dp"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				/>

		</LinearLayout>

	</ScrollView>

</RelativeLayout>