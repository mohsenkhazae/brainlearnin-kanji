<?xml version="1.0" encoding="utf-8"?>

 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">
	
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/top_control_bar">

	</RelativeLayout>
	
	<RelativeLayout android:id="@+id/bottom_control_bar"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"		
		android:orientation="horizontal"    	
		>
		
		<Button
			android:id="@+id/button_import" 
			android:layout_width="187.5dp" 
			android:layout_height="90dp"
			android:text="@string/button_new_session_import"
			style="@style/BLButton"
			android:layout_alignParentLeft="true"
			 />
			
		<Button 
			android:id="@+id/button_open_selected"
			android:layout_width="187.5dp"
			android:layout_height="90dp"
			android:text="@string/button_new_session_open_selected"
			style="@style/BLButton"			
			android:layout_alignParentRight="true"
			 />
			 
	</RelativeLayout>
	
	<ListView 
		android:id="@android:id/list" 
		android:layout_width="fill_parent"
		android:layout_height="0dp" 
		android:choiceMode="singleChoice"
		android:layout_below="@id/top_control_bar" 
		android:layout_above="@id/bottom_control_bar">
	</ListView>
		
	<TextView 
		android:id="@android:id/empty" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/textview_empty_new_session_import"
		android:layout_below="@id/top_control_bar" 
		android:layout_above="@id/bottom_control_bar" 
	/>
</RelativeLayout>
 
 