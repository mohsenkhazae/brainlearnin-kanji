<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"    
    
    >

	<TextView 
		android:id="@+id/text_import_template" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/no_path"		
		android:gravity="center"
    	android:padding="30dp"
		style="@style/BLText"
    	android:layout_marginBottom="75dp"
	/>

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:orientation="horizontal"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:gravity="center_horizontal" 
    		>

		<Button 
			android:id="@+id/button_import_template_browse"
			android:layout_width="195dp"
	    	android:layout_height="wrap_content"
	    	android:text="@string/button_import_template_browse"
	    	style="@style/BLButton"	 
	    	android:layout_marginLeft="15dp"
	    	android:layout_marginRight="15dp"
	    />
	    
		<Button 
			android:id="@+id/button_import_template_import"
			android:layout_width="195dp"
	    	android:layout_height="wrap_content"
	    	android:text="@string/button_import_template_import"
	    	style="@style/BLButton"    	
	    	android:layout_marginLeft="15dp"
	    	android:layout_marginRight="15dp"
	    	android:layout_toRightOf="@id/button_import_template_browse"
	    />
	    
	    <Button 
			android:id="@+id/button_import_template_export_sample"
			android:layout_width="195dp"
	    	android:layout_height="wrap_content"
	    	android:text="@string/button_import_template_export_sample"
	    	style="@style/BLButton"
	    	android:layout_marginLeft="15dp"
	    	android:layout_marginRight="15dp"    		    	
	    	android:layout_toRightOf="@id/button_import_template_import"    	
	    />

	</RelativeLayout>
    
</LinearLayout>
