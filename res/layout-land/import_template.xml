<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"    
    
    >

	<TextView 
		android:id="@+id/text_import_template" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/no_path"
		android:padding="20dip"
		android:textColor="#fff"
    	android:layout_marginBottom="50dip"
	/>

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:orientation="horizontal"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:gravity="center_horizontal" 
    		>

		<Button 
			android:id="@+id/button_import_template_browse"
			android:layout_width="130dip"
	    	android:layout_height="wrap_content"
	    	android:text="@string/button_import_template_browse"
	    	android:gravity="center"	 
	    	android:layout_marginLeft="10dip"
	    	android:layout_marginRight="10dip"
	    />
	    
		<Button 
			android:id="@+id/button_import_template_import"
			android:layout_width="130dip"
	    	android:layout_height="wrap_content"
	    	android:text="@string/button_import_template_import"
	    	android:gravity="center"    	
	    	android:layout_marginLeft="10dip"
	    	android:layout_marginRight="10dip"
	    	android:layout_toRightOf="@id/button_import_template_browse"
	    />
	    
	    <Button 
			android:id="@+id/button_import_template_export_sample"
			android:layout_width="130dip"
	    	android:layout_height="wrap_content"
	    	android:text="@string/button_import_template_export_sample"
	    	android:gravity="center"
	    	android:layout_marginLeft="10dip"
	    	android:layout_marginRight="10dip"    		    	
	    	android:layout_toRightOf="@id/button_import_template_import"    	
	    />

	</RelativeLayout>
    
</LinearLayout>
