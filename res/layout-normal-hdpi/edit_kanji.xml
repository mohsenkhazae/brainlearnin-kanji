<?xml version="1.0" encoding="utf-8"?>

 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">
	
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/top_control_bar">

	</RelativeLayout>
	
	<LinearLayout android:id="@+id/bottom_control_bar"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		
		android:orientation="vertical"
    	android:gravity="center_horizontal"
		>
			
		<Button 
			android:id="@+id/button_edit_kanji_update"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/button_edit_kanji_update"			
			 />
	</LinearLayout>
	
	<ScrollView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 		
		android:layout_below="@id/top_control_bar" 
		android:layout_above="@id/bottom_control_bar"
	>
	
	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 		
	>
		<TextView
	        android:id="@+id/edit_kanji_kanji_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/edit_kanji_kanji_title"
	        android:textColor="#fff"
	        />
	        
	    <EditText
	        android:id="@+id/edit_kanji_kanji_edit"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/rounded_edittext"
	        android:layout_marginTop="10dip"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:layout_marginBottom="20dip"
	        android:textColor="#fff"
	        android:paddingLeft="6dip"
	        android:paddingRight="6dip"	        
	        android:layout_below="@id/edit_kanji_kanji_title"
	        />
	        
	    <TextView
	        android:id="@+id/edit_kanji_on_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/edit_kanji_kanji_edit"
	        android:text="@string/edit_kanji_on_title"
	        android:textColor="#fff"
	        />
	        
	    <EditText
	        android:id="@+id/edit_kanji_on_edit"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:layout_marginBottom="20dip"
	        android:textColor="#fff"
	        android:paddingLeft="6dip"
	        android:paddingRight="6dip"
	        android:background="@drawable/rounded_edittext"
	        android:layout_below="@id/edit_kanji_on_title"/>
	        
	    <TextView
	        android:id="@+id/edit_kanji_kun_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/edit_kanji_on_edit"
	        android:text="@string/edit_kanji_kun_title"
	        android:textColor="#fff"
	        />
	        
	    <EditText
	        android:id="@+id/edit_kanji_kun_edit"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/rounded_edittext"
	        android:layout_marginTop="10dip"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:layout_marginBottom="20dip"
	        android:textColor="#fff"
	        android:paddingLeft="6dip"
	        android:paddingRight="6dip"
	        android:layout_below="@id/edit_kanji_kun_title"/>
	        
	    <TextView
	        android:id="@+id/edit_kanji_meanings_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/edit_kanji_kun_edit"
	        android:text="@string/edit_kanji_meanings_title"
	        android:textColor="#fff"
	        />
	        
	    <EditText
	        android:id="@+id/edit_kanji_meanings_edit"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/rounded_edittext"
	        android:layout_marginTop="10dip"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:textColor="#fff"
	        android:paddingLeft="6dip"
	        android:paddingRight="6dip"
	        android:layout_below="@id/edit_kanji_meanings_title"/>
	    
	</RelativeLayout>
	
	</ScrollView>
	

</RelativeLayout>