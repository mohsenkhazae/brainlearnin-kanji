<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center_horizontal" 
	>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:gravity="center"        
        android:padding="10dp"		
        android:layout_marginTop="10dp"
        >

	<TableRow		        
		>

	
			<Button 
				android:id="@+id/session_opened_on_button"
				android:layout_width="166.666666666667dp"
		    	android:layout_height="wrap_content"
		    	android:text="@string/session_opened_on_button"
		    	style="@style/BLButtonSM"	    			    	
		    	android:layout_marginRight="35dp"
		    />
		    
		    <Button 
				android:id="@+id/session_opened_meanings_button"
				android:layout_width="166.666666666667dp"
		    	android:layout_height="wrap_content"		    	
		    	android:text="@string/session_opened_meanings_button"
		    	style="@style/BLButtonSM"
		    	android:layout_marginLeft="35dp"		    	
		    />

	</TableRow>  
	
	<TableRow
		android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        >
			<Button 
				android:id="@+id/session_opened_kun_button"
				android:layout_width="166.666666666667dp"
		    	android:layout_height="wrap_content"
		    	android:text="@string/session_opened_kun_button"
		    	style="@style/BLButtonSM"		    		
		    	android:layout_marginRight="35dp"    
		    />
		    
		    <TextView 				
				android:layout_width="166.666666666667dp"
				android:layout_height="wrap_content" 
				android:text=""
				style="@style/BLTextSM"
				android:layout_marginLeft="35dp"
			/>
	</TableRow>
	
	<TableRow
        	>
			<Button 
				android:id="@+id/session_opened_onkun_button"
				android:layout_width="100dp"
		    	android:layout_height="wrap_content"    			    	
		    	android:text="@string/session_opened_onkun_button"
		    	style="@style/BLButtonSM"		    	
		    	android:layout_marginRight="35dp"
		    />
		    
		    <Button 
				android:id="@+id/session_opened_flashcard_button"
				android:layout_width="100dp"
		    	android:layout_height="wrap_content"
		    	android:text="@string/session_opened_flashcard_button"
		    	style="@style/BLButtonSM"
		    	android:layout_marginLeft="35dp"		    	
		    />
	</TableRow>
                
</TableLayout>

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"	    
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"	    
	    >
	    
	    <CheckBox android:id="@+id/session_opened_grading_check"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/session_opened_grading_check"   
        	android:layout_marginRight="10dp"
        	android:layout_marginBottom="10dp"
        	style="@style/BLTextSM"      	
        	/>
        	
        <CheckBox android:id="@+id/session_opened_quick_quiz_check"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/session_opened_quick_quiz_check"
        	android:layout_marginLeft="10dp" 
        	android:layout_marginBottom="10dp"
        	style="@style/BLTextSM"
        />        
    
    </LinearLayout>

</LinearLayout>

