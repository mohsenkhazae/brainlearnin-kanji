<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"    
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"    
    android:layout_width="250dp"
    
    >
       
    
    <TextView
        android:id="@+id/edit_leitner_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_leitner_label"      
        style="@style/BLTextSM"  
        />
        
    <EditText
        android:id="@+id/edit_leitner_entry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@id/edit_leitner_label"
        android:textSize="14.6666666666667sp"
        />
 
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"    
    	android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
    	android:gravity="center_horizontal"    
    	> 

    <Button
        android:id="@+id/edit_leitner_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_leitner_entry"        
        android:layout_marginLeft="10dp"
        style="@style/BLButtonNoPadSM"
        android:text="@string/OK" />
        
    <Button
    	android:id="@+id/edit_leitner_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/edit_leitner_ok"
        android:layout_alignTop="@id/edit_leitner_ok"
        android:layout_alignParentRight="true"
        style="@style/BLButtonNoPadSM"
        android:text="@string/Cancel" />
    </LinearLayout>
</LinearLayout>
