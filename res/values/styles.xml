<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="app_theme" parent="android:Theme">
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="android:listViewStyle">@style/TransparentListView</item>
        <item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>        
    </style>

	<style name="TransparentListView" parent="@android:style/Widget.ListView">
		<item name="android:cacheColorHint">@android:color/transparent</item>
	</style>
	
	<style name="TransparentExpandableListView" parent="@android:style/Widget.ExpandableListView">
		<item name="android:cacheColorHint">@android:color/transparent</item>
	</style>
	
	<style name="TextViewText" parent="@android:style/TextAppearance" >        
        <item name="android:textColor">#008</item>
    </style>
    
	<style name="PreferencesTheme" >
    	<item name="@android:textAppearance">@style/PreferemcesTextAppearance</item>
  	</style>
        
    <style name="PreferemcesTextAppearance" parent="@android:style/TextAppearance">        
        <item name="android:textColor">#00f</item>
    </style>
    
    <style name="BLButton" parent="@android:style/Widget.Button" >        
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>
    </style>
    
    <style name="BLButtonNoPad" parent="@android:style/Widget.Button" >        
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>        
    </style>
    
    <style name="BLText" parent="@android:style/TextAppearance" >        
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="BLButtonSM" parent="@android:style/Widget.Button" >        
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
    </style>
    
    <style name="BLButtonNoPadSM" parent="@android:style/Widget.Button" >        
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>        
    </style>
    
    <style name="BLTextSM" parent="@android:style/TextAppearance" >        
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
    </style>
        
</resources>